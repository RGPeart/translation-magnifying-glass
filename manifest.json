{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "Translation Magnifying Glass",
  "description": "Convert your mouse cursor to a high-quality magnifying glass with the ability to translate the text you are zooming in on.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "homepage_url": "https://webextension.org/listing/magnifying-glass.html",
  "background": {
    "service_worker": "worker.js"
  },
  "icons": {
    "16": "/data/images/16.png",
    "32": "/data/images/32.png",
    "48": "/data/images/48.png",
    "64": "/data/images/64.png",
    "128": "/data/images/128.png",
    "256": "/data/images/256.png",
    "512": "/data/images/512.png"
  },
  "action": {}
}
